<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme"></style>

    <style name="AppBaseThemeNoTitle" parent="@android:Theme.Black.NoTitleBar"></style>

    <style name="AppThemeNoTitle" parent="AppBaseThemeNoTitle"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowTitleSize">@dimen/title_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/windowTitleBackground</item>
    </style>

    <style name="windowTitleBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- custom Dialog Theme -->
    <style name="customdialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:background"> #FF0000</item>
    </style>

    <style name="bar_time_text">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#263c4d</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">7.5dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="bar_day_text">
        <item name="android:layout_height">31dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#b6c5d1</item>
        <item name="android:textColor">#263c4d</item>
        <item name="android:textSize">6dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="add_dialog_edittext">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/line_box</item>
        <item name="android:textColor">#6C6C6C</item>
    </style>

    <style name="left_drawer_list_item_text">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/bg_list_p</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>