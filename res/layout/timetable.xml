<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/bg_bar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_bar_day"
        android:src="@drawable/bg_bar_time" />

    <ImageView
        android:id="@+id/bg_bar_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bg_bar_time"
        android:src="@drawable/bg_bar_day" />

    <LinearLayout
        android:id="@+id/timetable_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bg_bar_day"
        android:layout_toRightOf="@+id/bg_bar_time"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>